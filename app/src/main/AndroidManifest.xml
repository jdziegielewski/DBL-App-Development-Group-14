<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dblgroup14.app">
    <!-- camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".SleapApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".challenges.MathChallenge"></activity>
        <activity android:name=".challenges.BarcodeScanChallenge" />
        <activity android:name=".challenges.shakeChallenge" />
        <activity
            android:name=".AlarmActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_play_challenge_page"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".challenges.challenge1" />
        <activity android:name=".challenges.editChallenges" />
        <activity android:name=".challenges.editShakeChallenge" />
        <activity android:name=".management.edit.EditActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>